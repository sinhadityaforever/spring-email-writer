{
  "name": "Email Reply Generator",
  "description": "AI powered email reply generator",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://email-writer-backend.onrender.com/*", "*://mail.google.com/*"],
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ],
  "action": {
    "default_title": "Email Reply Generator"
  }
}